<div class="container offset-footer">

  <% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
  <% end %>

  <div class="row pl-2">
    <h1>Show Film</h1>
  </div>

  <div class="row pl-2">
    <p>Your publication's details are displayed below. Click <%= link_to "here", publications_path %> to return to your list of publications.</p>
  </div>

  <div class="row table-responsive">
    <table class="table table-hover">
      <tbody>
        <tr>
          <th scope="row">Author(s):</th>
          <td>
          <%= all_authors(@film) %>
          </td>
        </tr>

        <tr>
          <th scope="row">Author College(s):</th>
          <td><%= all_colleges(@film.college_ids) %></td>
        </tr>

        <tr>
          <th scope="row">UC Department(s) or Division(s):</th>
          <td><%= @film.uc_department %></td>
        </tr>

        <tr>
          <th scope="row">Work Title:</th>
          <td><%= @film.work_title %></td>
        </tr>

        <tr>
          <th scope="row">Other Title:</th>
          <td><%= @film.other_title %></td>
        </tr>

        <tr>
          <th scope="row">Director:</th>
          <td><%= @film.director %></td>
        </tr>

        <tr>
          <th scope="row">Release Year:</th>
          <td><%= @film.release_year %></td>
        </tr>

        <% if session[:admin] %>
        
          <tr>
            <th scope="row">Submitter ID:</th>
            <td><%= link_to link_to @submitter.id.to_s, publications_id(@submitter.id) %></td>
          </tr>
          <tr>
            <th scope="row">Submitter Name:</th>
            <td><%= submitter_name(@submitter) %></td>
          </tr>

        <% end %>
      </tbody>
      </table>
    </div>

    <div class="row">
      <%= link_to 'Edit', edit_film_path(@film), class: "btn btn-primary" %>
    </div>