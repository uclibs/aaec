<div class="container offset-footer">

  <% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
  <% end %>

  <div class="row">
    <h1>Show Submitter</h1>
  </div>

  <div class="row table-responsive">
    <table class="table table-hover">
      <tbody>
        <tr>
          <th scope="row">First name:</th>
          <td><%= @submitter.first_name %></td>
        </tr>

        <tr>
          <th scope="row">Last name:</th>
          <td><%= @submitter.last_name %></td>
        </tr>

        <tr>
          <th scope="row">UC College:</th>
          <td><%= @submitter.college %></td>
        </tr>

        <tr>
          <th scope="row">UC Department or Division:</th>
          <td><%= @submitter.department %></td>
        </tr>

        <tr>
          <th scope="row">Mail Location:</th>
          <td><%= @submitter.mailing_address %></td>
        </tr>

        <tr>
          <th scope="row">Phone number:</th>
          <td><%= @submitter.phone_number %></td>
        </tr>

        <tr>
          <th scope="row">Email address:</th>
          <td><%= @submitter.email_address %></td>
        </tr>
      </tbody>
      </table>
  </div>

  <div class="row">
    <%= link_to 'Edit', edit_submitter_path(@submitter), class: "btn btn-primary" %>
  </div>

</div>