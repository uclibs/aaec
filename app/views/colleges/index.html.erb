<div class="container offset-footer">
  <div class="row pl-2">
    <h1>Colleges</h1>
  </div>

  <div class="row table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @colleges.each do |college| %>
          <tr>
            <td><%= college.name %></td>
            <td><%= link_to 'Show', college %></td>
            <td><%= link_to 'Edit', edit_college_path(college) %></td>
            <td><%= link_to 'Destroy', college, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_to 'New College', new_college_path, class: "btn btn-primary" %>
  </div>
</div>