<%= form_with(model: other_publication, local: true) do |form| %>
  <% if other_publication.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(submitter.errors.count, "error") %> found:</h4>
      <hr>
      <% other_publication.errors.full_messages.each do |message| %>
      <p class="mb-0"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :author_first_name %>
      <%= form.text_field :author_first_name, required: true, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :author_last_name %>
      <%= form.text_field :author_last_name, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label(:college_ids, "UC College") %><br />
      <%= form.collection_check_boxes :college_ids, College.all, :id, :name do |c| %>
        <div class="form-check form-check-inline">
          <%= c.check_box class: "form-check-input" %>
          <%= c.label class: "form-check-label" %>
        </div>
      <% end %>
      </div>

      <div class="form-group col-md-6">
        <%= form.label(:uc_department, "UC Department or Division") %>
        <%= form.text_field :uc_department, class: "form-control" %>
      </div>
    </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :work_title %>
      <%= form.text_field :work_title, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :other_title %>
      <%= form.text_field :other_title, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :volume %>
      <%= form.text_field :volume, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :issue %>
      <%= form.text_field :issue, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :page_numbers %>
      <%= form.text_field :page_numbers, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :publisher %>
      <%= form.text_field :publisher, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :city %>
      <%= form.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :publication_date %>
      <%= form.text_field :publication_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :url %>
      <%= form.text_field :url, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :doi %>
      <%= form.text_field :doi, class: "form-control" %>
    </div>
  </div>
  <%# Note: This may need to be changed since it will always use the logged in submitters id %>
  <%= hidden_field_tag "other_publication[submitter_id]", session[:submitter_id] %>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
